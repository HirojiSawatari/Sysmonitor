<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/info_panel_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="fill_parent"
        android:layout_height="46.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/skinpic_green"
        android:gravity="center"
        android:padding="12.0dip"
        android:text="设备监控"
        android:textColor="@android:color/white"
        android:textSize="18.0sp" />

    <ImageView
        android:layout_width="120dp"
    	android:layout_height="120dp"
	    android:layout_alignParentLeft="true"
    	android:layout_below="@+id/TextView1"
    	android:src="@drawable/panel2"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="20dp"
	    android:layout_marginLeft="30dp"/>
    
    <ImageView
        android:id="@+id/needle2"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:layout_alignParentLeft="true"
    	android:layout_below="@+id/TextView1"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="30dp"
	    android:src="@drawable/needle2" />
    
    <ImageView
        android:layout_width="120dp"
    	android:layout_height="120dp"
	    android:layout_alignParentRight="true"
    	android:layout_below="@+id/TextView1"
    	android:src="@drawable/panel3"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="20dp"
	    android:layout_marginRight="30dp"/>
    
    <ImageView
        android:id="@+id/needle3"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:layout_alignParentRight="true"
    	android:layout_below="@+id/TextView1"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dp"
	    android:layout_marginRight="30dp"
	    android:src="@drawable/needle3" />
    
    <ImageView
        android:layout_width="270dp"
    	android:layout_height="270dp"
    	android:layout_below="@+id/TextView1"
    	android:src="@drawable/panel"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="150dp"/>
    
    <ImageView
        android:id="@+id/needle"
	    android:layout_width="270dp"
	    android:layout_height="270dp"
	    android:layout_below="@+id/TextView1"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="150dp"
	    android:src="@drawable/needle" />
    
    <TextView
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginTop="410dp"
	    android:layout_marginLeft="30dp"
        android:text="ROM :"
        android:textColor="#707070"
        android:textSize="15.0sp" />
    
    <hg.crx.sysmonitor.utils.RoundedRectProgressBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="410dp"
	    android:layout_marginLeft="80dp"
	    android:layout_marginRight="30dp"
        app:backColor="#E6E6E6"
        app:barColor="#33CC99"
        app:textColor="#FFFFFF"/>
    
</RelativeLayout>